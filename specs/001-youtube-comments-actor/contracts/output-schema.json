{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "YouTube Comment",
  "description": "Output schema for a single YouTube comment extracted by the actor",
  "type": "object",
  "properties": {
    "cid": {
      "type": "string",
      "description": "Unique comment identifier"
    },
    "comment": {
      "type": "string",
      "description": "The comment text content"
    },
    "author": {
      "type": "string",
      "description": "Comment author display name (e.g., @username)"
    },
    "videoId": {
      "type": "string",
      "description": "YouTube video identifier (11 characters)"
    },
    "pageUrl": {
      "type": "string",
      "format": "uri",
      "description": "Full URL to the YouTube video"
    },
    "title": {
      "type": "string",
      "description": "Title of the YouTube video"
    },
    "commentsCount": {
      "type": "integer",
      "description": "Total number of comments on the video"
    },
    "voteCount": {
      "type": "integer",
      "description": "Number of likes on this comment"
    },
    "replyCount": {
      "type": "integer",
      "description": "Number of replies to this comment"
    },
    "authorIsChannelOwner": {
      "type": "boolean",
      "description": "True if the comment author is the video creator"
    },
    "hasCreatorHeart": {
      "type": "boolean",
      "description": "True if the video creator liked this comment"
    },
    "type": {
      "type": "string",
      "enum": ["comment", "reply"],
      "description": "Whether this is a top-level comment or a reply"
    },
    "replyToCid": {
      "type": ["string", "null"],
      "description": "Parent comment ID for replies, null for top-level comments"
    },
    "date": {
      "type": "string",
      "description": "When the comment was posted (relative format, e.g., '2 days ago')"
    }
  },
  "required": [
    "cid",
    "comment",
    "author",
    "videoId",
    "pageUrl",
    "title",
    "commentsCount",
    "voteCount",
    "replyCount",
    "authorIsChannelOwner",
    "hasCreatorHeart",
    "type",
    "replyToCid",
    "date"
  ],
  "examples": [
    {
      "comment": "This is up there with their best songs.",
      "cid": "UgxRn0_LUxzRP2MybPR4AaABAg",
      "author": "@Nonie_Jay",
      "videoId": "bJTjJtRPqYE",
      "pageUrl": "https://www.youtube.com/watch?v=bJTjJtRPqYE",
      "commentsCount": 171,
      "replyCount": 0,
      "voteCount": 2,
      "authorIsChannelOwner": false,
      "hasCreatorHeart": false,
      "type": "comment",
      "replyToCid": null,
      "title": "Halestorm - Unapologetic [Official Audio]"
    },
    {
      "comment": "Totally agree!",
      "cid": "UgxRn0_LUxzRP2MybPR4AaABAg.9abc123def456",
      "author": "@ReplyUser",
      "videoId": "bJTjJtRPqYE",
      "pageUrl": "https://www.youtube.com/watch?v=bJTjJtRPqYE",
      "commentsCount": 171,
      "replyCount": 0,
      "voteCount": 1,
      "authorIsChannelOwner": false,
      "hasCreatorHeart": false,
      "type": "reply",
      "replyToCid": "UgxRn0_LUxzRP2MybPR4AaABAg",
      "title": "Halestorm - Unapologetic [Official Audio]",
      "date": "1 day ago"
    }
  ]
}
